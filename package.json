{
  "name": "spindb",
  "version": "0.11.1",
  "description": "Spin up local database containers without Docker. A DBngin-like CLI for PostgreSQL and MySQL.",
  "type": "module",
  "bin": {
    "spindb": "./bin/cli.js"
  },
  "scripts": {
    "start": "tsx cli/bin.ts",
    "dev": "tsx watch cli/bin.ts",
    "test": "run-s test:all",
    "test:pg": "node --import tsx --test --test-concurrency=1 tests/integration/postgresql.test.ts",
    "test:mysql": "node --import tsx --test --test-concurrency=1 tests/integration/mysql.test.ts",
    "test:sqlite": "node --import tsx --test --test-concurrency=1 tests/integration/sqlite.test.ts",
    "test:unit": "node --import tsx --test --test-concurrency=1 tests/unit/*.test.ts",
    "test:cli": "node --import tsx --test --test-concurrency=1 tests/integration/cli-e2e.test.ts",
    "test:integration": "run-s test:pg test:mysql test:sqlite",
    "test:all": "run-s test:unit test:integration",
    "format": "prettier --write .",
    "lint": "tsc --noEmit && eslint .",
    "check:pg-versions": "tsx scripts/check-pg-versions.ts",
    "prepare": "husky"
  },
  "keywords": [
    "postgres",
    "postgresql",
    "mysql",
    "database",
    "local",
    "development",
    "sqlite",
    "tui",
    "cli"
  ],
  "author": "Bob Bass <bob@bbass.co>",
  "license": "PolyForm-Noncommercial-1.0.0",
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robertjbass/spindb.git"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "homepage": "https://github.com/robertjbass/spindb#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "inquirer": "^9.3.7",
    "ora": "^8.1.1",
    "string-width": "^8.1.0",
    "tsx": "^4.7.0",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "@types/unzipper": "^0.10.11",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.48.0"
  },
  "files": [
    "bin",
    "cli",
    "core",
    "config",
    "engines",
    "types"
  ]
}
